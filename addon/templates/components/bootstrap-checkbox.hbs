{{#bootstrap/control-wrapper classNames=classNames errors=errors as |control|}}
  {{#if hasBlock}}
    {{yield
      (hash
        label=(component control.label for=control.inputId srOnly=srOnly label=label)
        invalid=(component control.invalid errors=errors)
        input=(component 'bootstrap/-checkbox'
          checked=isChecked
          onClick=(action "change")
          elementId=control.inputId
          type='checkbox'
          placeholder=placeholder
          classNames="form-control"
          readonly=readonly
          disabled=disabled
          key-press=key-press
          key-up=key-up
          key-down=key-down
          required=required
        )
      )
    }}
  {{else}}
    {{control.label for=control.inputId label=label srOnly=srOnly}}
    {{bootstrap/-checkbox
      tabindex=tabindex
      checked=isChecked
      onClick=(action "change")
      elementId=control.inputId
      type='checkbox'
      placeholder=placeholder
      readonly=readonly
      disabled=disabled
      key-press=key-press
      key-up=key-up
      key-down=key-down
      required=required
    }}
    {{control.invalid errors=errors}}
  {{/if}}
{{/bootstrap/control-wrapper}}
