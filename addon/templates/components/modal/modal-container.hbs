{{#bs-modal
  size="md"
  footer=false
  body=false
  header=false
  open=isOpen
  autoClose=false
  closeAction=(action 'closeModal')
  backdropClose=false
  classNames="generic-modal-content-wrapper"
as |modal|}}
    {{#if hasBlock}}
      {{yield (x-hash
        isOpen=isOpen
        toggle=(action 'toggleModal')
        close=(action 'closeModal')
        save=(action (queue acceptAction (action (mut isOpen) false)))
        header=(component 'modal/modal-header' title=title)
        body=(component 'modal/modal-body' content=modalBodyContent)
        footer=(component 'modal/modal-footer'
          acceptAction=acceptAction
          cancelAction=(action 'closeModal')
        )
      )}}
    {{else}}
      {{modal/modal-header title=title}}
      {{modal/modal-body content=modalBodyContent}}
      {{modal/modal-footer
        acceptAction=acceptAction
        cancelAction=(action 'closeModal')}}
    {{/if}}
{{/bs-modal}}
