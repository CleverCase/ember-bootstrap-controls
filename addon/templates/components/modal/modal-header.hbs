<div class="modal-header">
  {{#if hasBlock}}
    {{yield}}
  {{else}}
    <h5 class="modal-title" id="{{modalId}}Label">{{title}}</h5>
    {{#if showClose}}
      <button type="button" class="close" data-dismiss="modal" aria-label="Close" {{action 'closeModal'}}>
        <span aria-hidden="true">&times;</span>
      </button>
    {{/if}}
  {{/if}}
</div>
