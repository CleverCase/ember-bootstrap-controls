<ul class="pagination {{concat-class-names className}}">
	{{#if (eq pageNumber 1)}}
		<li class="page-item disabled">
			<a href="#!" aria-label="Previous">
				<span aria-hidden="true">&laquo;</span>
				<span class="sr-only">Previous</span>
			</a>
		</li> 
	{{else}}
		<li>
			<a class="page-link" href="#!" aria-label="Previous"{{action 'moveToPage' (minus-numbers pageNumber 1)}}>
			<span aria-hidden="true">&laquo;</span>
			<span class="sr-only">Previous</span>
			</a>
		</li>
	{{/if}} 
	{{#each visibleOuterLeftPageNumbers as |num|}} 
		{{#if (eq num pageNumber)}}
			<li class='page-item active'>
				<a class="page-link">{{num}}</a>
			</li>
		{{else}}
			<li>
				<a class="page-link"{{action 'moveToPage' num}}>{{num}}</a>
			</li>
		{{/if}}
	{{/each}} 
		{{#if hasLeftGap}}
			<li class="page-item disabled">
				<a>...</a>
			</li> 
		{{/if}} 
	{{#each visibleInnerPageNumbers as |num|}} 
		{{#if num}} 
			{{#if (eq num pageNumber)}}
				<li class='page-item active'>
					<a class="page-link">{{num}}</a>
				</li>
			{{else}}
				<li>
					<a class="page-link"{{action 'moveToPage' num}}>{{num}}</a>
				</li>
			{{/if}}
		{{/if}} 
	{{/each}} 
	{{#if hasRightGap}}
		<li class="page-item  disabled">
			<a class="page-link">...</a>
		</li>
	{{/if}} 
	{{#each visibleOuterRightPageNumbers as |num|}} 
		{{#if (eq num pageNumber)}}
			<li class='page-item active'>
				<a class="page-link">{{num}}</a>
			</li>
		{{else}}
			<li>
				<a class="page-link"{{action 'moveToPage' num}}>{{num}}</a>
			</li>
		{{/if}}
	{{/each}} 
	{{#if (eq pageNumber totalPages)}}
		<li class="page-item disabled">
			<a class="page-link" href="#!" aria-label="Next">
				<span aria-hidden="true">&raquo;</span> 
				<span class="sr-only">Next</span>
			</a>
		</li> 
	{{else}}
		<li>
			<a class="page-link" {{action 'moveToPage' (add-numbers pageNumber 1)}} href="#!" aria-label="Next">
				<span aria-hidden="true">&raquo;</span> 
				<span class="sr-only">Next</span>
			</a>
		</li>
	{{/if}}
</ul>
{{#if totalRecords}}
	<span class='position-message'> {{positionMessage}} </span>
{{/if}}
