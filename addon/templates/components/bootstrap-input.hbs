{{#if hasBlock}}
  {{yield inputId}}
{{else}}
  <label for="{{inputId}}" class="control-label {{if hasColumns labelColumnCss ''}} {{if customLabelCss customLabelCss ''}} {{if srOnly 'sr-only' ''}}">{{label}}</label>
  {{#if hasColumns}}
    <div class="{{inputColumnCss}}">
      {{input
        value=valueDecorator
        checked=checkedDecorator
        elementId=inputId
        type=type
        placeholder=placeholder
        classNames="form-control"
        readonly=readonly
        disabled=disabled}}
    </div>
  {{else}}
    {{input
      value=valueDecorator
      checked=checkedDecorator
      elementId=inputId
      type=type
      placeholder=placeholder
      classNames="form-control"
      readonly=readonly
      disabled=disabled}}
  {{/if}}
  {{#if errors}}
    <div class="form-control-static alert alert-danger" role="alert">
      {{#each errors as |error|}}
        <span>{{error.message}}</span>
      {{/each}}
    </div>
  {{/if}}
{{/if}}
