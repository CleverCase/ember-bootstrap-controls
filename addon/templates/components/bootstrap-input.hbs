{{#bootstrap/control-wrapper
  classNames=classNames
  errors=errors
  srOnly=srOnly
  label=label
  as |control|
}}
  {{#let (component 'bootstrap/-input'
    value=value
    id=control.inputId
    type=type
    placeholder=placeholder
    classNames="form-control"
    readonly=readonly
    disabled=disabled
    key-press=key-press
    key-up=key-up
    key-down=key-down
    required=required
  ) as |input|}}
    {{#if hasBlock}}
      {{yield
        (hash
          label=control.label
          input=input
        )
      }}
    {{else}}
      {{control.label}}
      {{input}}
    {{/if}}
  {{/let}}
{{/bootstrap/control-wrapper}}
