{{#if hasBlock}}
  {{yield inputId}}
{{else}}
  {{#if label}}
    <label for="{{inputId}}" class="control-label {{if hasColumns labelColumnCss ''}} {{if customLabelCss customLabelCss ''}} {{if srOnly 'sr-only' ''}}">{{label}}</label>
  {{/if}}
  {{#if hasColumns}}
    {{#if isChecked}}
      <div class="{{inputColumnCss}}">
        {{input
          tabindex=tabindex
          checked=value
          elementId=inputId
          type=type
          placeholder=placeholder
          readonly=readonly
          disabled=disabled}}
      </div>
    {{else}}
      <div class="{{inputColumnCss}}">
        {{input
          tabindex=tabindex
          value=value
          elementId=inputId
          type=type
          placeholder=placeholder
          classNames="form-control"
          readonly=readonly
          disabled=disabled
          key-press=keyPress}}
      </div>
    {{/if}}
  {{else}}
    {{#if isChecked}}
      {{input
        checked=value
        elementId=inputId
        type=type
        placeholder=placeholder
        readonly=readonly
        disabled=disabled}}
    {{else}}
      {{input
        tabindex=tabindex
        value=value
        elementId=inputId
        type=type
        placeholder=placeholder
        classNames="form-control"
        readonly=readonly
        disabled=disabled
        key-press=keyPress}}
    {{/if}}
  {{/if}}
  {{#if errors}}
    <div class="form-control-static alert alert-danger" role="alert">
      {{#each errors as |error|}}
        <span>{{error.message}}</span>
      {{/each}}
    </div>
  {{/if}}
{{/if}}
