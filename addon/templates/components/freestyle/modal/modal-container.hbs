{{#section.subsection name='modal Container'}}
  {{#freestyle-collection
    defaultKey='Basic Usage'
    inline=false
    as |collection|
  }}
    {{#collection.variant key='Basic Usage'}}
      {{#bootstrap-button
        classNames='btn-primary'
        action=(action 'openModal')
      }}
        Open Modal
      {{/bootstrap-button}}
      {{#freestyle-usage 'basic-modal' name='BasicEmberBootstrapControls'}}
        {{modal/modal-container
          isOpen=isModalOpen
          title="Simple Modal"
          modalBodyContent=sampleContent
          acceptAction=(action 'acceptModal')
        }}
      {{/freestyle-usage}}
    {{/collection.variant}}
    {{#collection.variant key='Advanced Usage'}}
      {{#bootstrap-button
        classNames='btn-primary'
        action=(action 'openModal')
      }}
        Open Modal
      {{/bootstrap-button}}
      {{#freestyle-usage 'advanced-modal' name='AdvancedEmberBootstrapControls'}}
        {{modal/modal-container
          isOpen=isModalOpen
          title="Simple Modal"
          btnAcceptLabel="Ok"
          btnAcceptStyle="success"
          btnCloseLabel="Cancel"
          btnCloseStyle="danger"
          showCloseInHeader=true
          modalBodyContent=sampleContent
          acceptAction=(action 'acceptModal')
          closeAction=(action 'closeModal')
        }}
      {{/freestyle-usage}}
      {{freestyle-prop-types data=data propDefinitions=propDefinitions}}
    {{/collection.variant}}
    {{#collection.variant key='Custom Sub Components'}}
      {{#bootstrap-button
        classNames='btn-primary'
        action=(action 'openModal')
      }}
        Open Modal
      {{/bootstrap-button}}
      {{#freestyle-usage 'advanced-modal' name='CustomEmberBootstrapControls'}}
        {{#modal/modal-container isOpen=isModalOpen as |modal|}}
          {{modal.header title="Block Modal" showCloseInHeader=true}}
          {{#modal/-body}}
            <div>
            <h1>Content!</h1>
            <p>Some important stuff to read.</p>
            <p class="text-danger">Some Red text to read</p>
            </div>
          {{/modal/-body}}
          {{modal.footer
            btnAcceptLabel="Save"
            btnAcceptStyle="info"
            btnCloseLabel="X"
            btnCloseStyle="link"
            acceptAction=(action 'acceptModal')
            closeAction=(action 'closeModal')}}
        {{/modal/modal-container}}
      {{/freestyle-usage}}
    {{/collection.variant}}

  {{/freestyle-collection}}
{{/section.subsection}}
