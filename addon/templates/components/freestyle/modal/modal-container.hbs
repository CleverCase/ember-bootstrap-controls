{{#section.subsection name='modal Container'}}
  {{#freestyle-collection
    defaultKey='Basic Usage'
    inline=false
    as |collection|
  }}
    {{#collection.variant key='Basic Usage'}}
      {{#bootstrap-button
        classNames='btn-primary'
        action=(action 'openModal')
      }}
        Open Modal
      {{/bootstrap-button}}

      {{#freestyle-usage 'basic-modal' name='BasicEmberBootstrapControls'}}
        {{modal/modal-container
          isOpen=isModalOpen
          title="Simple Modal"
          modalBodyContent=sampleContent
          acceptAction=(action 'acceptModal')
        }}
      {{/freestyle-usage}}
    {{/collection.variant}}

    {{#collection.variant key='Advanced Usage'}}
      {{#bootstrap-button
        classNames='btn-primary'
        action=(action 'openModalAdvanced')
      }}
        Open Advanced Modal
      {{/bootstrap-button}}

      {{#freestyle-usage 'advanced-modal' name='AdvancedEmberBootstrapControls'}}
        {{modal/modal-container
          isOpen=isModalOpenAdvanced
          title="Advanced Modal"
          btnAcceptLabel="Ok"
          btnCloseLabel="Cancel"
          showCloseInHeader=true
          modalBodyContent=sampleContent
          acceptAction=(action 'acceptModalAdvanced')
          closeAction=(action 'closeModalAdvanced')
        }}
      {{/freestyle-usage}}
      {{freestyle-prop-types data=data propDefinitions=propDefinitions}}
    {{/collection.variant}}

    {{#collection.variant key='Custom Sub Components'}}
      {{#bootstrap-button
        classNames='btn-primary'
        action=(action 'openModalCustomSub')
      }}
        Open Custom Block Modal
      {{/bootstrap-button}}

      {{#freestyle-usage 'advanced-modal' name='CustomEmberBootstrapControls'}}
        {{#modal/modal-container isOpen=isModalOpenCustomSub as |modal|}}
          {{modal.header
            title="Block Modal"
            showCloseInHeader=true
            closeAction=(action 'closeModalCustomSub')
          }}
          {{#modal.body}}
            <div>
            <h1>Content!</h1>
            <p>Some important stuff to read.</p>
            <p class="text-danger">Some Red text to read</p>
            </div>
          {{/modal.body}}
          {{#modal.footer}}
            {{#bootstrap-button
              classNames="btn-danger"
              action=(action 'closeModalCustomSub')}}
              X
            {{/bootstrap-button}}
            {{#bootstrap-button
              classNames="btn-info"
              action=(action 'acceptModalCustomSub')}}
              SAVE
            {{/bootstrap-button}}
          {{/modal.footer}}
        {{/modal/modal-container}}
      {{/freestyle-usage}}
    {{/collection.variant}}

  {{/freestyle-collection}}
{{/section.subsection}}
