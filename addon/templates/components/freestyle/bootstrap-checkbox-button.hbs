{{#section.subsection name="Checkbox Button"}}
  {{#freestyle-collection title='Checkbox' defaultKey='checkbox-unchecked' inline=true as |collection|}}
    {{#collection.variant key='checkbox-unchecked'}}
      {{#freestyle-usage "checkbox-unchecked" title="Checkbox Unchecked"}}
        {{input
          label="Checkbox"
          name="Checkbox"
          type="checkbox"
          checked=false}}
      {{/freestyle-usage}}
    {{/collection.variant}}

    {{#collection.variant key='checkbox-checked'}}
      {{#freestyle-usage "checkbox-checked" title="Checkbox Checked"}}
        {{input
          label="Checkbox Checked"
          name="Checkbox Checked"
          type="checkbox"
          checked=true}}
      {{/freestyle-usage}}
    {{/collection.variant}}

    {{#collection.variant key='checkbox-error'}}
      {{#freestyle-usage "checkbox-error" title="Checkbox Alert"}}
        {{input
          label="Checkbox Alert"
          name="Checkbox Alert"
          type="checkbox"
          checked=false
          errors=true}}
      {{/freestyle-usage}}
    {{/collection.variant}}
  {{/freestyle-collection}}
{{/section.subsection}}
