{{#section.subsection name="Bootstrap Edit Form"}}
  {{#freestyle-collection
    defaultKey="Basic Usage"
    inline=false
    as |collection|
  }}
    For more input documentation and examples see {{#link-to (query-params f=null s="Bootstrap Inputs" ss=null)}}here{{/link-to}}
    {{#collection.variant key="Basic Usage"}}
      {{#freestyle-usage "basic-bootstrap-edit-form" name="Basic EmberBootstrapControls"}}
        {{#bootstrap/edit-form
          save=(action "slowAction" 1000 "save")
          cancel=(action "slowAction" 1000 "cancel")
          as |form|
        }}
          {{#form.inputs as |inputs|}}
            {{inputs.text label="Name"}}
            {{inputs.number label="Number of Doughnuts"}}
            {{inputs.checkbox label="Rocket Doughnut Delivery?"}}
          {{/form.inputs}}
          {{form.controls}}
        {{/bootstrap/edit-form}}
      {{/freestyle-usage}}
    {{/collection.variant}}
    {{#collection.variant key="Advanced Usage"}}
      {{#freestyle-usage "advanced-bootstrap-edit-form" name="Advanced EmberBootstrapControls"}}
        {{#bootstrap/edit-form
          isEditing=true
          save=(action "slowAction" 3000 "order")
          cancel=(action "slowAction" 1000 "cancel")
          as |form|
        }}
          <h1>Doughnut Express!</h1>
          {{#if form.isEditing}}
            {{#form.inputs as |inputs|}}
              {{inputs.number label="Number of Doughnuts"}}
            {{/form.inputs}}
          {{/if}}
          {{#if form.isSaving}}
            <div class="progress">
              <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                Launching Doughnut Drones!
              </div>
            </div>
          {{/if}}
          {{#form.controls as |controls|}}
            {{#if controls.isEditing}}
              {{#controls.saveButton
                classNames="btn-success"
                as |save|
              }}
                Order Now!
              {{/controls.saveButton}}
              {{controls.cancelButton classNames="btn-danger"}}
            {{else}}
              {{#controls.editButton
                classNames="btn-success"
                as |edit|
              }}
                Create Order
              {{/controls.editButton}}
            {{/if}}
          {{/form.controls}}
        {{/bootstrap/edit-form}}
        {{freestyle-prop-types data=data propDefinitions=propDefinitions}}
      {{/freestyle-usage}}
    {{/collection.variant}}
