{{#section.subsection name='Bootstrap Simple Form'}}
  For more input documentation and examples see {{#link-to (query-params f=null s="Bootstrap Inputs" ss=null)}}here{{/link-to}}
  {{#freestyle-usage 'bootstrap-simple-form' name='Simple Form'}}
    {{#bootstrap/simple-form as |form|}}
      {{#form.inputs as |inputs|}}
        {{inputs.checkbox label="Checkbox" value=basicBoolean}}
        {{inputs.date label="Date" value=basicDate}}
        {{inputs.email label="Email" value=basicString}}
        {{inputs.floatingLabelInput label="Floating Label Input" value=basicString}}
        {{inputs.number label="Number" value=basicString}}
        {{inputs.password label="Password" value=basicString}}
        {{inputs.range label="Range" value=basicNumber}}
        {{inputs.radioGroup label="Radio Group" inline=true options=radioOptions value=radioValue onChange=(action (mut radioValue))}}
        {{inputs.search label="Search" value=basicString}}
        {{inputs.tel label="Tel" value=basicString}}
        {{inputs.text label="Text" value=basicString}}
        {{inputs.time label="Time" value=basicString}}
        {{inputs.url label="Url" value=basicString}}
      {{/form.inputs}}
    {{/bootstrap/simple-form}}
  {{/freestyle-usage}}
{{/section.subsection}}
