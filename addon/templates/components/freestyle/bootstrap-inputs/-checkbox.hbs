{{#section.subsection name='Checkbox Input'}}
  {{#freestyle-collection
    defaultKey='Basic Usage'
    inline=false
    as |collection|
  }}
    {{#collection.variant key='Basic Usage'}}
      <p>Checkbox Value: {{basicValue}}</p>
      {{#freestyle-usage 'basic-bootstrap-inputs-checkbox' name='Basic Checkbox Input'}}
        {{bootstrap-inputs/-checkbox
          label="Super Cool Checkbox"
          value=basicValue
        }}
      {{/freestyle-usage}}
    {{/collection.variant}}
    {{#collection.variant key='Advanced Usage'}}
      {{#freestyle-usage 'advanced-bootstrap-inputs-checkbox' name='Advanced Checkbox Input'}}
        {{#bootstrap-inputs/-checkbox
          disabled=data.disabled
          label=data.label
          readonly=data.readonly
          required=data.required
          srOnly=data.srOnly
          tabIndex=data.tabIndex
          value=data.value
          onClick=(action 'simpleClick')
          as |checkbox|
        }}
          {{checkbox.input}}
          {{checkbox.label}}
        {{/bootstrap-inputs/-checkbox}}
      {{/freestyle-usage}}
      {{freestyle-prop-types data=data propDefinitions=propDefinitions}}
    {{/collection.variant}}
    {{#collection.variant key='Custom Child Components'}}
      {{#freestyle-usage 'checkbox-child-components' name='Checkbox Input'}}
        {{#bootstrap-inputs/-checkbox
          disabled=data.disabled
          label=data.label
          readonly=data.readonly
          required=data.required
          srOnly=data.srOnly
          tabIndex=data.tabIndex
          value=data.value
          onClick=(action 'simpleClick')
          as |checkbox|
        }}
          {{checkbox.input}}
          {{checkbox.label}}
        {{/bootstrap-inputs/-checkbox}}
      {{/freestyle-usage}}
      {{#freestyle-note "checkbox-child-components--notes"}}
        **Checkbox Children**
        * Children of a custom checkbox component are `{{checkbox.input}}` and `{{checkbox.input}}`.
        * `{{checkbox.input}}` is the literal checkbox input and `{{checkbox.input}}` is the label for the checkbox.
      {{/freestyle-note}}
    {{/collection.variant}}
  {{/freestyle-collection}}
{{/section.subsection}}
