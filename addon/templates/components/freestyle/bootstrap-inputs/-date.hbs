{{#section.subsection name='Date Input'}}
  {{#freestyle-collection
    defaultKey='Basic Usage'
    inline=false
    as |collection|
  }}
    {{#collection.variant key='Basic Usage'}}
      {{#freestyle-usage 'basic-date-input' name='Basic Date Input'}}
        {{bootstrap-inputs/-date
          label="Pick Date"
          value=basicValue}}
      {{/freestyle-usage}}
    {{/collection.variant}}
    {{#collection.variant key='Advanced Usage'}}
      {{#freestyle-usage 'advanced-date-input' name='Advanced Date Input'}}
        {{bootstrap-inputs/-date
          value=data.value
          disabled=data.disabled
          autocomplete=data.autocomplete
          maxlength=data.maxlength
          minlength=data.minlength
          multiple=data.multiple
          pattern=data.pattern
          placeholder=data.placeholder
          readonly=data.readonly
          required=data.required
          srOnly=data.srOnly
          tabindex=data.tabindex
          help=data.help
          autoclose=data.autoclose
          clearBtn=data.clearBtn
          todayBtn=data.todayBtn
          todayHighlight=data.todayHighlight}}
          
        {{freestyle-prop-types data=data propDefinitions=propDefinitions}}
      {{/freestyle-usage}}
    {{/collection.variant}}
  {{/freestyle-collection}}
{{/section.subsection}}
