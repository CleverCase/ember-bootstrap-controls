{{#section.subsection name='Text Input'}}
  {{#freestyle-collection
    defaultKey='Basic Usage'
    inline=false
    as |collection|
  }}
    {{#collection.variant key='Basic Usage'}}
      {{#freestyle-usage 'basic-bootstrap-inputs-text' name='Basic Text Input'}}
        {{bootstrap-inputs/-text
          label="Text"
        }}
      {{/freestyle-usage}}
    {{/collection.variant}}
    {{#collection.variant key='Advanced Usage'}}
      {{#freestyle-dynamic 'advanced-bootstrap-inputs-text'
        dynamicProperties=dynamicProperties
        title='Text Advanced'
        componentName='-text'
        as |dynamic|
      }}
        {{bootstrap-inputs/-text
          autocomplete=dynamic.autocomplete
          help=dynamic.help
          disabled=dynamic.disabled
          label=dynamic.label
          maxlength=dynamic.maxlength
          minlength=dynamic.minlength
          placeholder=dynamic.placeholder
          readonly=dynamic.readonly
          required=dynamic.required
          srOnly=dynamic.srOnly
          tabIndex=dynamic.tabIndex
          value=dynamic.value
        }}
      {{/freestyle-dynamic}}
    {{/collection.variant}}
  {{/freestyle-collection}}
{{/section.subsection}}
