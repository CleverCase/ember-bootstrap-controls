{{#section.subsection name='Text Input'}}
  {{#freestyle-collection
    defaultKey='Basic Usage'
    inline=false
    as |collection|
  }}
    {{#collection.variant key='Basic Usage'}}
      {{#freestyle-usage 'basic-bootstrap-inputs-text' name='Basic Text Input'}}
        {{#bootstrap/simple-form as |form|}}
          {{form.inputs.text
            label="Text"
            placeholder='Text'
          }}
        {{/bootstrap/simple-form}}
      {{/freestyle-usage}}
    {{/collection.variant}}
    {{#collection.variant key='Advanced Usage'}}
      {{#freestyle-usage 'advanced-bootstrap-inputs-text' name='Advanced Text Input'}}
        {{#bootstrap/simple-form as |form|}}
          {{form.inputs.text
            autocomplete=data.autocomplete
            help=data.help
            disabled=data.disabled
            label=data.label
            maxlength=data.maxlength
            minlength=data.minlength
            placeholder=data.placeholder
            readonly=data.readonly
            required=data.required
            srOnly=data.srOnly
            tabIndex=data.tabIndex
            value=data.value
          }}
        {{/bootstrap/simple-form}}
      {{/freestyle-usage}}
      {{freestyle-prop-types data=data propDefinitions=propDefinitions}}
    {{/collection.variant}}
    {{#collection.variant key='Custom Child Components'}}
      {{#freestyle-usage 'text-child-components' name='Text Input'}}
        {{#bootstrap/simple-form as |form|}}
          {{#form.inputs.text
            label="Text"
            value=basicValue
            as |text|
          }}
            {{text.input}}
            {{text.label}}
          {{/form.inputs.text}}
        {{/bootstrap/simple-form}}
      {{/freestyle-usage}}
      {{#freestyle-note "text-child-components--notes"}}
        The checkbox component yields 2 child components `input` and `label`.

        `{{input}}`
        This is the input.

        `{{label}}`
        This is the label for the input. It yields the text for label if you need additional customization.
      {{/freestyle-note}}
    {{/collection.variant}}
  {{/freestyle-collection}}
{{/section.subsection}}
