{{#section.subsection name='Floating Label Input'}}
  {{#freestyle-collection
    defaultKey='Basic Usage'
    inline=false
    as |collection|
  }}
    {{#collection.variant key='Basic Usage'}}
      {{#freestyle-usage 'basic-floating-label-input' name='Floating Label Input'}}
        {{bootstrap-inputs/-floating-label-input
          label="Basic Example"
          value=basicValue
        }}
      {{/freestyle-usage}}
    {{/collection.variant}}
    {{#collection.variant key='Advanced Usage'}}
      {{#freestyle-usage 'advanced-floating-label-input' name='Advanced Text Input'}}
        {{bootstrap-inputs/-floating-label-input
          help=data.help
          disabled=data.disabled
          label=data.label
          maxlength=data.maxlength
          minlength=data.minlength
          readonly=data.readonly
          required=data.required
          srOnly=data.srOnly
          tabIndex=data.tabIndex
          value=data.value
        }}
      {{/freestyle-usage}}
      {{freestyle-prop-types data=data propDefinitions=propDefinitions}}
    {{/collection.variant}}
  {{/freestyle-collection}}
{{/section.subsection}}
