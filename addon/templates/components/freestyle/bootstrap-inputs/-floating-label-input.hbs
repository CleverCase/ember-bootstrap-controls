{{#section.subsection name="Floating Label Input"}}
  {{#freestyle-collection
    defaultKey="Basic Usage"
    inline=false
    as |collection|
  }}
    {{#collection.variant key="Basic Usage"}}
      {{#freestyle-usage "basic-floating-label-input" name="Floating Label Input"}}
        {{#bootstrap/form/-inputs as |inputs|}}
          {{inputs.floatingLabelInput
            label="Basic Example"
            value=basicValue
          }}
        {{/bootstrap/form/-inputs}}
      {{/freestyle-usage}}
    {{/collection.variant}}
    {{#collection.variant key="Advanced Usage"}}
      {{#freestyle-usage "advanced-floating-label-input" name="Advanced Text Input"}}
        {{#bootstrap/form/-inputs as |inputs|}}
          {{inputs.floatingLabelInput
            help=data.help
            disabled=data.disabled
            label=data.label
            maxlength=data.maxlength
            minlength=data.minlength
            readonly=data.readonly
            required=data.required
            srOnly=data.srOnly
            tabIndex=data.tabIndex
            value=data.value
          }}
        {{/bootstrap/form/-inputs}}
      {{/freestyle-usage}}
      {{freestyle-prop-types data=data propDefinitions=propDefinitions}}
    {{/collection.variant}}
    {{#collection.variant key="Custom Child Components"}}
      {{#freestyle-usage "floating-label-child-components" name="Floating Label Input"}}
        {{#bootstrap/form/-inputs as |inputs|}}
          {{#inputs.floatingLabelInput
            label="Floating Label Input"
            value=basicValue
            as |floatingLabelInput|
          }}
            {{floatingLabelInput.input}}
            {{floatingLabelInput.label}}
          {{/inputs.floatingLabelInput}}
        {{/bootstrap/form/-inputs}}
      {{/freestyle-usage}}
      {{#freestyle-note "floating-label-child-components--notes"}}
        The checkbox component yields 2 child components `input` and `label`.

        `{{input}}`
        This is the input.

        `{{label}}`
        This is the label for the input. It yields the text for label if you need additional customization.
      {{/freestyle-note}}
    {{/collection.variant}}
  {{/freestyle-collection}}
{{/section.subsection}}
