{{#section.subsection name='Password Input'}}
  {{#freestyle-collection
    title="Password Inputs"
    defaultKey='Basic Usage'
    inline=false
    as |collection|
  }}
    {{#collection.variant key='Basic Usage'}}
      {{#freestyle-usage 'basic-password-input' name='Basic Password Input'}}
        {{#bootstrap/simple-form as |form|}}
          {{form.inputs.password
            label="Password"
            value=basicValue
          }}
        {{/bootstrap/simple-form}}
      {{/freestyle-usage}}
    {{/collection.variant}}
    {{#collection.variant key='Advanced Usage'}}
      {{#freestyle-usage 'advanced-password-input' name='Advanced Password Input'}}
        {{#bootstrap/simple-form as |form|}}
          {{form.inputs.password
            autocomplete=data.autocomplete
            help=data.help
            disabled=data.disabled
            label=data.label
            maxlength=data.maxlength
            minlength=data.minlength
            placeholder=data.placeholder
            readonly=data.readonly
            required=data.required
            srOnly=data.srOnly
            tabIndex=data.tabIndex
            value=data.value
          }}
        {{/bootstrap/simple-form}}
      {{/freestyle-usage}}
      {{freestyle-prop-types data=data propDefinitions=propDefinitions}}
    {{/collection.variant}}
    {{#collection.variant key='Custom Child Components'}}
      {{#freestyle-usage 'password-child-components' name='Password Input'}}
        {{#bootstrap/simple-form as |form|}}
          {{#form.inputs.password
            label="Password"
            value=basicValue
            as |password|
          }}
            {{password.input}}
            {{password.label}}
          {{/form.inputs.password}}
        {{/bootstrap/simple-form}}
      {{/freestyle-usage}}
      {{#freestyle-note "password-child-components--notes"}}
        The checkbox component yields 2 child components `input` and `label`.

        `{{input}}`
        This is the input.

        `{{label}}`
        This is the label for the input. It yields the text for label if you need additional customization.
      {{/freestyle-note}}
    {{/collection.variant}}
  {{/freestyle-collection}}
{{/section.subsection}}
