{{#section.subsection name='Number Input'}}
  {{#freestyle-collection
    defaultKey='Basic Usage'
    inline=false
    as |collection|
  }}
    {{#collection.variant key='Basic Usage'}}
      {{#freestyle-usage 'basic-bootstrap-inputs-number' name='Basic Number Input'}}
        {{#bootstrap/simple-form as |form|}}
          {{form.inputs.number
            label='Basic Number Input'
            value=basicValue
          }}
        {{/bootstrap/simple-form}}
      {{/freestyle-usage}}
    {{/collection.variant}}
    {{#collection.variant key='Advanced Usage'}}
      {{#freestyle-usage 'advanced-bootstrap-inputs-number' name='Advanced Number Input'}}
        {{#bootstrap/simple-form as |form|}}
          {{form.inputs.number
            label=data.label
            help=data.help
            srOnly=data.srOnly
            disabled=data.disabled
            inputmode=data.inputmode
            max=data.max
            min=data.min
            placeholder=data.placeholder
            readonly=data.readonly
            required=data.required
            step=data.step
            tabindex=data.tabindex
            value=data.value
          }}
        {{/bootstrap/simple-form}}
      {{/freestyle-usage}}
      {{freestyle-prop-types data=data propDefinitions=propDefinitions}}
    {{/collection.variant}}
    {{#collection.variant key='Custom Child Components'}}
      {{#freestyle-usage 'number-child-components' name='Number Input'}}
        {{#bootstrap/simple-form as |form|}}
          {{#form.inputs.number
            label="Number"
            value=basicValue
            as |number|
          }}
            {{number.input}}
            {{number.label}}
          {{/form.inputs.number}}
        {{/bootstrap/simple-form}}
      {{/freestyle-usage}}
      {{#freestyle-note "number-child-components--notes"}}
        The checkbox component yields 2 child components `input` and `label`.

        `{{input}}`
        This is the input.

        `{{label}}`
        This is the label for the input. It yields the text for label if you need additional customization.
      {{/freestyle-note}}
    {{/collection.variant}}
  {{/freestyle-collection}}
{{/section.subsection}}
