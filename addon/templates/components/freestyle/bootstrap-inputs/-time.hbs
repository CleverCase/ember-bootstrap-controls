{{#section.subsection name='Time Input'}}
  {{#freestyle-collection
    defaultKey='Basic Usage'
    inline=false
    as |collection|
  }}
    {{#collection.variant key='Basic Usage'}}
      {{#freestyle-usage 'basic-bootstrap-inputs-time' name='Basic Time Input'}}
        {{bootstrap-inputs/-time
          label="Time"}}
      {{/freestyle-usage}}
    {{/collection.variant}}
    {{#collection.variant key='Advanced Usage'}}
      {{#freestyle-usage 'advanced-bootstrap-inputs-time' name='Advanced Time Input'}}
        {{#bootstrap-inputs/-time
          autocomplete=data.autocomplete
          help=data.help
          disabled=data.disabled
          label=data.label
          max=data.max
          min=data.min
          placeholder=data.placeholder
          readonly=data.readonly
          required=data.required
          srOnly=data.srOnly
          step=data.step
          tabIndex=data.tabIndex
          value=data.value
          as |time|
        }}
          {{time.label}}
          {{time.input}}
        {{/bootstrap-inputs/-time}}
      {{/freestyle-usage}}
      {{freestyle-prop-types data=data propDefinitions=propDefinitions}}
    {{/collection.variant}}
  {{/freestyle-collection}}
{{/section.subsection}}
