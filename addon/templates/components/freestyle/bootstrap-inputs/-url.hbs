{{#section.subsection name="Url Input"}}
  {{#freestyle-collection
    defaultKey="Basic Usage"
    inline=false
    as |collection|
  }}
    {{#collection.variant key="Basic Usage"}}
      {{#freestyle-usage "basic-bootstrap-inputs-url" name="Basic Url Input"}}
        {{#bootstrap/form/-inputs as |inputs|}}
          {{inputs.url
            label="URL"
            value=basicValue
          }}
        {{/bootstrap/form/-inputs}}
      {{/freestyle-usage}}
    {{/collection.variant}}
    {{#collection.variant key="Advanced Usage"}}
      {{#freestyle-usage "advanced-bootstrap-inputs-url" name="Advanced Url Input"}}
        {{#bootstrap/form/-inputs as |inputs|}}
          {{inputs.url
            autocomplete=data.autocomplete
            help=data.help
            disabled=data.disabled
            label=data.label
            maxlength=data.maxlength
            minlength=data.minlength
            placeholder=data.placeholder
            readonly=data.readonly
            required=data.required
            srOnly=data.srOnly
            tabIndex=data.tabIndex
            value=data.value
          }}
        {{/bootstrap/form/-inputs}}
      {{/freestyle-usage}}
      {{freestyle-prop-types data=data propDefinitions=propDefinitions}}
    {{/collection.variant}}
    {{#collection.variant key="Custom Child Components"}}
      {{#freestyle-usage "url-child-components" name="Url Input"}}
        {{#bootstrap/form/-inputs as |inputs|}}
          {{#inputs.url
            label="URL"
            value=basicValue
            as |url|
          }}
            {{url.input}}
            {{url.label}}
          {{/inputs.url}}
        {{/bootstrap/form/-inputs}}
      {{/freestyle-usage}}
      {{#freestyle-note "url-child-components--notes"}}
        The checkbox component yields 2 child components `input` and `label`.

        `{{input}}`
        This is the input.

        `{{label}}`
        This is the label for the input. It yields the text for label if you need additional customization.
      {{/freestyle-note}}
    {{/collection.variant}}
  {{/freestyle-collection}}
{{/section.subsection}}
