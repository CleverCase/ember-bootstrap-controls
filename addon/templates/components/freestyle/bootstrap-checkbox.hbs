{{#section.subsection name="Checkbox"}}
  {{#freestyle-collection title='Checkbox' defaultKey='checkbox-checked' inline=true as |collection|}}
    {{#collection.variant key='checkbox-checked'}}
      {{#freestyle-usage "checkbox-checked" title="Checkbox Checked"}}
        {{bootstrap-checkbox
          label="Checkbox Checked"
          name="CheckboxChecked"
          onclick=(action 'checkboxChange')
          isChecked=isChecked}}
      {{/freestyle-usage}}
    {{/collection.variant}}

    {{#collection.variant key='checkbox-unchecked'}}
      {{#freestyle-usage "checkbox-unchecked" title="Checkbox Unchecked"}}
        {{bootstrap-checkbox
          label="Checkbox Un-Checked"
          name="CheckboxUnChecked"
          onclick=(action 'checkboxChange')
          isChecked=isNotChecked}}
      {{/freestyle-usage}}
    {{/collection.variant}}

    {{#collection.variant key='checkbox-icon'}}
      {{#freestyle-usage "checkbox-icon" title="Checkbox Icon"}}
        {{#bootstrap-checkbox
          classNames="fancy-checkbox"
          label="Star"
          srOnly=false
          onclick=(action "toggleFavorite") as |checkbox|}}
          {{#checkbox.label}}
            {{checkbox.input}}
            <i class="fal fa-star unchecked"></i>
            <i class="fas fa-star checked"></i>
          {{/checkbox.label}}
        {{/bootstrap-checkbox}}
      {{/freestyle-usage}}


    {{/collection.variant}}


    {{#collection.variant key='checkbox-error'}}
      {{#freestyle-usage "checkbox-error" title="Checkbox Alert"}}
        {{bootstrap-checkbox
          label="Checkbox Alert"
          name="CheckboxAlert"
          isChecked=isChecked
          errors=true}}
      {{/freestyle-usage}}
    {{/collection.variant}}

    {{#collection.variant key='checkbox-autofocus'}}
      {{#freestyle-usage "checkbox-autofocus" title="Checkbox Auto Focus"}}
        {{bootstrap-checkbox
          label="Checkbox Auto Focus"
          name="CheckboxAutoFocus"
          isChecked=false
          autofocus=true}}
      {{/freestyle-usage}}
    {{/collection.variant}}
  {{/freestyle-collection}}
{{/section.subsection}}
