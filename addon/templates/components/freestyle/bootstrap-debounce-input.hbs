{{#section.subsection name="Debounce"}}
  {{#freestyle-collection title="Debounce Input" defaultKey="input-debounce" inline=true as |collection|}}
    {{#collection.variant key="input-debounce"}}
      {{#freestyle-usage "input-debounce" title="Debounce Input Text"}}
        {{bootstrap-debounce-input
          label="Search"
          srOnly=true
          value=searchText
          onChange=(action "searchAction")
          placeholder="Search"}}
        {{#if searchCompleted}}<strong>onChange</strong> Action Fired: {{searchText}}{{/if}}
      {{/freestyle-usage}}
    {{/collection.variant}}
  {{/freestyle-collection}}
{{/section.subsection}}
