{{#section.subsection name="Masked Input"}}
  {{#freestyle-collection title='Masked Input' defaultKey='input-mask-text' inline=true as |collection|}}
    {{#collection.variant key='input-mask-text'}}
      {{#freestyle-usage "input-mask-text" title="Masked Text Input"}}
        {{bootstrap-mask-input
          mask=myMask
          value=value
          showMaskOnFocus=showMaskOnFocus
          showMaskOnHover=showMaskOnHover
          placeholder="(000) 000-0000"
          readonly=readonly
          disabled=disabled
          label="Masked Text Input"
          required=false
          }}
      {{/freestyle-usage}}
    {{/collection.variant}}
    {{#collection.variant key='input-phone-mask-text'}}
      {{#freestyle-usage "input-phone-mask-text" title="Masked Phone Text Input"}}
        {{bootstrap-phone-mask-input
          value=value
          showMaskOnFocus=showMaskOnFocus
          showMaskOnHover=showMaskOnHover
          placeholder="(000) 000-0000"
          readonly=readonly
          disabled=disabled
          label="Masked Phone Input"
          required=false
          }}
      {{/freestyle-usage}}
    {{/collection.variant}}
  {{/freestyle-collection}}
{{/section.subsection}}
