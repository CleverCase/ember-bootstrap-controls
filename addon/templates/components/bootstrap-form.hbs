{{yield
  (hash
    isEditing=(readonly isEditing)
    isSaving=(readonly _isSaving)
    isCanceling=(readonly _isCanceling)
    isRunning=(or (readonly _isSaving) (readonly _isCanceling))
    controls=(component 'bootstrap/-form-controls'
      isSaving=(readonly _isSaving)
      isCanceling=(readonly _isCanceling)
      isRunning=(or (readonly _isSaving) (readonly _isCanceling))
      isEditing=(readonly isEditing)
      save=(action 'save')
      cancel=(action 'cancel')
      edit=(action 'edit')
    )
    body=(component 'bootstrap/-form-body')
  )
}}
