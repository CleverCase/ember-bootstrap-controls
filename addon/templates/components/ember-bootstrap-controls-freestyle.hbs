{{#freestyle-section name='Bootstrap Controls' as |section|}}
  <!-- Checkbox Sample-->
  {{#freestyle-subsection name="Checkbox" section=section}}
    {{#freestyle-collection title='Checkbox' defaultKey='checkbox-unchecked' inline=true as |collection|}}
      {{#freestyle-variant collection=collection key='checkbox-unchecked'}}
        {{#freestyle-usage "checkbox-unchecked" title="Checkbox Unchecked"}}
          {{input
            label="Checkbox"
            name="Checkbox"
            type="checkbox"
            checked=false}}
        {{/freestyle-usage}}
      {{/freestyle-variant}}
      {{#freestyle-variant collection=collection key='checkbox-checked'}}
        {{#freestyle-usage "checkbox-checked" title="Checkbox Checked"}}
          {{input
            label="Checkbox Checked"
            name="Checkbox Checked"
            type="checkbox"
            checked=true}}
        {{/freestyle-usage}}
      {{/freestyle-variant}}
      {{#freestyle-variant collection=collection key='checkbox-error'}}
        {{#freestyle-usage "checkbox-error" title="Checkbox Alert"}}
          {{input
            label="Checkbox Alert"
            name="Checkbox Alert"
            type="checkbox"
            checked=false
            errors=true}}
        {{/freestyle-usage}}
      {{/freestyle-variant}}
    {{/freestyle-collection}}
  {{/freestyle-subsection}}
  <!-- Currency Input Field Sample-->
  {{#freestyle-subsection name="Currency Input" section=section}}
    {{#freestyle-collection title='Currency Input' defaultKey='ci-default' inline=true as |collection|}}
      {{#freestyle-variant collection=collection key='ci-default'}}
        {{#freestyle-usage "ci-default" title="Currency Input"}}
        {{bootstrap-currency-input
          masked-input
          mask=currencyMask
          tabindex=tabindex
          value=value
          elementId=inputId
          type=type
          placeholder="0.00"
          label="Currency Input"
          classNames="form-control"
          readonly=readonly
          disabled=disabled
          key-press=keyPress
          key-up=keyUp
          key-down=keyDown
          required=required
          errors=errors}}
        {{/freestyle-usage}}
      {{/freestyle-variant}}
      {{#freestyle-variant collection=collection key='ci-read-only'}}
