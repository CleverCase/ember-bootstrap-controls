  <!-- Power Select Field -->
  {{#freestyle-subsection name="Power Select" section=section}}
    {{#freestyle-collection title='Power Select' defaultKey='default-power-select' inline=true as |collection|}}
      {{#freestyle-variant collection=collection key='default-power-select'}}
        {{#freestyle-usage "default-power-select" title="Power Select Default"}}
          {{#bootstrap-power-select
            label="Sample"
            selected=selectedSample
            options=(sort-by 'label' sample)
            placeholder="Pick a Sample"
            onChange=(action "selectItem")
            allowClear=true
            searchEnabled=true
            searchField="label"
            loadingMessage="Loading Samples..."
            as |sample|}}
              <span>{{sample.label}}</span>
          {{/bootstrap-power-select}}
        {{/freestyle-usage}}
      {{/freestyle-variant}}
      {{#freestyle-variant collection=collection key='alert-power-select'}}
