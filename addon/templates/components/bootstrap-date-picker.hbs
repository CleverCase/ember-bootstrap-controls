{{#bootstrap/control-wrapper classNames=classNames errors=errors required=required srOnly=srOnly label=label as |control|}}
  {{bootstrap-datepicker
    value=value
    classNames="form-control"
    elementId=control.inputId
    autoclose=autoclose
    calendarWeeks=calendarWeeks
    clearBtn=clearBtn
    daysOfWeekDisabled=daysOfWeekDisabled
    endDate=endDate
    forceParse=forceParse
    format=format
    keyboardNavigation=keyboardNavigation
    language=language
    minViewMode=minViewMode
    multidate=multidate
    multidateSeparator=multidateSeparator
    orientation=orientation
    startDate=startDate
    startView=startView
    todayBtn=todayBtn
    todayHighlight=todayHighlight
    weekStart=weekStart}}
{{/bootstrap/control-wrapper}}
