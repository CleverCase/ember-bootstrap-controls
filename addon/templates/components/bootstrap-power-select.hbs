{{#if hasBlock}}
  {{#if label}}
    <label for="{{inputId}}" class="control-label {{if srOnly 'sr-only' ''}}">{{label}}</label>
  {{else}}
    {{log 'An optional label will be removed in the next version of ember-bootstrap-controls. Please use srOnly to hide the label instead'}}
  {{/if}}
  {{#power-select
    selected=selected
    options=options
    matcher=matcher
    placeholder=placeholder
    loadingMessage=loadingMessage
    noMatchesMessage=noMatchesMessage
    onchange=onChange
    allowClear=allowClear
    search=search
    searchEnabled=searchEnabled
    searchField=searchField
    searchMessage=searchMessage
    allowClear=allowClear
    disabled=disabled
    required=required
    renderInPlace=renderInPlace
    afterOptionsComponent=afterOptionsComponent
    beforeOptionsComponent=beforeOptionsComponent
    optionsComponent=optionsComponent
    groupComponent=groupComponent
    triggerComponent=triggerComponent
    searchMessageComponent=searchMessageComponent
    placeholderComponent=placeholderComponent
    as |option|
  }}
    {{yield option}}
  {{/power-select}}
  {{#if errors}}
    <div class="alert alert-danger" role="alert">
      {{#each errors as |error|}}
        <span>{{error.message}}</span>
      {{/each}}
    </div>
  {{/if}}
{{else}}
  <span>Missing block syntax for power select</span>
{{/if}}
