{{#let (hash
  title=(component 'bootstrap/modal/header/-title' title=title)
  closeAction=closeAction
  closeButton=(component 'bootstrap/modal/header/-close-button' action=closeAction)
  showCloseInHeader=showCloseInHeader
) as |parts|}}
  {{#if hasBlock}}
    {{yield parts}}
  {{else}}
    {{parts.title}}
    {{#if showCloseInHeader}}
      {{parts.closeButton}}
    {{/if}}
  {{/if}}
{{/let}}