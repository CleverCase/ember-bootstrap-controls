{{#if hasBlock}}
  {{yield
    (hash
      acceptAction=acceptAction
      acceptButton=(component 'bootstrap-button'
        classNames='btn-primary'
        action=acceptAction
        buttonText='Accept'
      )
      closeAction=closeAction
      closeButton=(component 'bootstrap-button'
        classNames='btn-secondary'
        action=closeAction
        buttonText='Close'
      )
    )
  }}
{{else}}
  {{bootstrap-button
    classNames='btn-secondary'
    action=closeAction
    buttonText='Close'
  }}
  {{bootstrap-button
    classNames='btn-primary'
    action=closeAction
    buttonText='Accept'
  }}
{{/if}}
