{{#let (hash
  submitButton=(component 'bootstrap-button' classNames='btn-primary' action=submitAction type='submit' buttonText='Submit')
  resetButton=(component 'bootstrap-button' type='reset' buttonText='Reset')
  normalButton=(component 'bootstrap-button' type='button')
  submitAction=submitAction
) as |parts|}}
  {{#if hasBlock}}
    {{yield parts}}
  {{else}}
    {{#if submitAction}}
      {{parts.submitButton}}
    {{/if}}
  {{/if}}
{{/let}}