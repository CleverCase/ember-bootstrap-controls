{{#if hasBlock}}
  {{yield
    (hash
      submitButton=(component 'bootstrap-button' classNames='btn-primary' action=(action 'submitForm') type='submit' buttonText='Submit')
      resetButton=(component 'bootstrap-button' type='reset' buttonText='Reset')
      normalButton=(component 'bootstrap-button' type='button')
      submitAction=(action "submitForm")
    )
  }}
{{else}}
  {{#if submitAction}}
    {{bootstrap-button
      classNames='btn-success px-5'
      action=submitAction
      type='submit'
      buttonText='Submit'
    }}
  {{/if}}
{{/if}}
