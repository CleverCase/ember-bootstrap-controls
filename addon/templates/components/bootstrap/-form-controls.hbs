{{#let (hash
  editButton=(component
    'bootstrap/-form-controls/edit-button'
    action=edit
  )
  saveButton=(component
    'bootstrap/-form-controls/save-button'
    disabled=isRunning
    action=save
  )
  cancelButton=(component
    'bootstrap/-form-controls/cancel-button'
    disabled=isRunning
    action=cancel
  )
) as |control|}}
  {{#if hasBlock}}
    {{yield
      (hash
        cancelButton=control.cancelButton
        saveButton=control.saveButton
        editButton=control.editButton
      )
    }}
  {{else}}
    {{#if isEditing}}
      {{control.saveButton}}
      {{control.cancelButton}}
    {{else}}
      {{control.editButton}}
    {{/if}}
  {{/if}}
{{/let}}