{{#bootstrap/control-wrapper
  classNames=classNames
  errors=errors
  srOnly=srOnly
  label=label
  help=help
  as |control|
}}
  {{#let (component 'bootstrap-inputs/-select'
    autofocus=autofocus
    bootstrapCustomClass=bootstrapCustomClass
    disabled=disabled
    control=control
    multiple=multiple
    required=required
    value=value
    options=options
    onChange=onChange
  ) as |input|}}
    {{#if hasBlock}}
      {{yield
        (hash
          label=control.label
          help=control.help
          control=control
          select=input
        )
      }}
    {{else}}
      {{control.label}}
      {{input}}
      {{control.help}}
    {{/if}}
  {{/let}}
{{/bootstrap/control-wrapper}}
