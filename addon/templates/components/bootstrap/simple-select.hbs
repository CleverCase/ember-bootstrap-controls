{{#bootstrap/control-wrapper
  classNames=classNames
  errors=errors
  srOnly=srOnly
  label=label
  help=help
  as |control|
}}
  {{#if hasBlock}}
    {{yield
      (hash
        label=(component control.label)
        help=(component control.help)
        control=control
        select=(component 'bootstrap-inputs/-select'
          autofocus=autofocus
          bootstrapCustomClass=bootstrapCustomClass
          disabled=disabled
          control=control
          multiple=multiple
          required=required
          value=value
          options=options
          onChange=onChange
        )
      )
    }}
  {{else}}
    {{control.label}}
    {{bootstrap-inputs/-select
      autofocus=autofocus
      bootstrapCustomClass=bootstrapCustomClass
      disabled=disabled
      control=control
      multiple=multiple
      required=required
      value=value
      options=options
      onChange=onChange
    }}
    {{control.help}}
  {{/if}}
{{/bootstrap/control-wrapper}}
