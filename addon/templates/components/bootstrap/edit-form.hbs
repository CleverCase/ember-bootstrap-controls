{{yield
  (hash
    isEditing=(readonly isEditing)
    isSaving=(readonly asyncSaveTask.isRunning)
    isCanceling=(readonly asyncCancelTask.isRunning)
    isRunning=(readonly isRunning)
    isDisabled=(readonly isDisabled)
    controls=(component 'bootstrap/form/-controls'
      isEditing=(readonly isEditing)
      isSaving=(readonly asyncSaveTask.isRunning)
      isCanceling=(readonly asyncCancelTask.isRunning)
      isRunning=(readonly isRunning)
      save=(action 'save')
      cancel=(action 'cancel')
      edit=(action 'edit')
    )
    inputs=(hash
      checkbox=(component 'bootstrap-inputs/-checkbox' disabled=(readonly isDisabled))
      date=(component 'bootstrap-inputs/-date' disabled=(readonly isDisabled))
      email=(component 'bootstrap-inputs/-email' disabled=(readonly isDisabled))
      floatingLabelInput=(component 'bootstrap-inputs/-floating-label-input' disabled=(readonly isDisabled))
      number=(component 'bootstrap-inputs/-number' disabled=(readonly isDisabled))
      password=(component 'bootstrap-inputs/-password' disabled=(readonly isDisabled))
      radioGroup=(component 'bootstrap/radio-group' disabled=(readonly isDisabled))
      range=(component 'bootstrap-inputs/-range' disabled=(readonly isDisabled))
      search=(component 'bootstrap-inputs/-search' disabled=(readonly isDisabled))
      select=(component 'bootstrap-inputs/-select' disabled=(readonly isDisabled))
      tel=(component 'bootstrap-inputs/-tel' disabled=(readonly isDisabled))
      text=(component 'bootstrap-inputs/-text' disabled=(readonly isDisabled))
      time=(component 'bootstrap-inputs/-time' disabled=(readonly isDisabled))
      url=(component 'bootstrap-inputs/-url' disabled=(readonly isDisabled))
    )
  )
}}
