{{#bs-modal
  size=size
  open=isOpen
  onHidden=afterHidden
  backdropClose=false
  as |modal|
}}
  {{#if hasBlock}}
    {{yield (hash
      isOpen=isOpen
      modal=modal
      header=(component 'modals/-header'
        modal=modal
        title=title
        closeAction=(action 'close' modal.close)
      )
      body=(component 'modals/-body' modal=modal content=modalBodyContent)
      closeAction=(action 'close' modal.close)
      footer=(component 'modals/-footer'
        modal=modal
        acceptAction=acceptAction
        cancelAction=(action 'close' modal.close)
      )
    )}}
  {{else}}
    {{modals/-header modal=modal title=title closeAction=(action 'close' modal.close)}}
    {{modals/-body modal=modal content=modalBodyContent}}
    {{modals/-footer
      modal=modal
      acceptAction=acceptAction
      cancelAction=(action 'close' modal.close)
    }}
  {{/if}}
{{/bs-modal}}
