{{#modals/-modal
  title=title
  size=size
  acceptAction=acceptAction
  onHide=onHide
  isOpen=isOpen
  as |modal|
}}
  {{yield (hash
    modal=modal
    isOpen=isOpen
    header=modal.header
    closeAction=modal.closeAction
    body=(component "modals/form/-body"
      modal=modal
      formDisabled=formDisabled
      isSaving=isSaving
      isCanceling=isCanceling
      isRunningAsync=isRunningAsync
    )
    footer=(component "modals/form/-footer"
      modal=modal
      acceptAction=acceptAction
      cancelAction=cancelAction
      isSaving=isSaving
      isCanceling=isCanceling
      isRunningAsync=isRunningAsync
    )
  )}}
{{/modals/-modal}}
