{{#modal.footer as |footer|}}
  {{#let (hash
    acceptButton=(component 'bootstrap/buttons/accept-button'
      buttonText=acceptBtnLabel
      action=acceptAction
    )
    cancelButton=(component 'bootstrap/buttons/cancel-button'
      action=cancelAction
    )
  ) as |controls|}}
    {{#if hasBlock}}
      {{yield controls}}
    {{else}}
      {{controls.cancelButton}}
      {{controls.acceptButton}}
    {{/if}}
  {{/let}}
{{/modal.footer}}
