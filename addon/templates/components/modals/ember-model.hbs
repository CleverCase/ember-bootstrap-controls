{{#modals/-form
  acceptAction=(action 'save')
  onHide=(action 'close')
  afterHidden=afterHidden
  formDisabled=disableForm
  isSaving=(readonly isSaving)
  isCanceling=(readonly isCanceling)
  isRunningAsync=(readonly isRunningAsync)
  isOpen=isOpen
  size=size
  as |modal|
}}
  {{#if hasBlock}}
    {{yield (hash
      isNewModel=isNewModel
      modal=modal
      isOpen=(readonly modal.isOpen)
      isSaving=(readonly isSaving)
      isCanceling=(readonly isCanceling)
      isRunningAsync=(readonly isRunningAsync)
      header=modal.header
      body=modal.body
      footer=(component 'modals/ember-model/-footer'
        isNewModel=isNewModel
        modal=modal
        isSaving=(readonly isSaving)
        isCanceling=(readonly isCanceling)
        isRunningAsync=(readonly isRunningAsync)
        acceptAction=(action 'save')
        cancelAction=modal.closeAction
      )
    )}}
  {{/if}}
{{/modals/-form}}
