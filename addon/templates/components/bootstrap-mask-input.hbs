{{#bootstrap/control-wrapper
  label=label
  srOnly=srOnly
  errors=errors
  classNames=classNames
as |control|}}
  {{#let (component 'one-way-input-mask'
    id=control.inputId
    class="form-control"
    value=value
    mask=mask
    update=(action 'update')
    disabled=disabled
    options=(hash
      showMaskOnHover=showMaskOnHover
      showMaskOnFocus=showMaskOnFocus
      repeat=repeat
    )
    required=required
    placeholder=placeholder
    onComplete=onComplete
  ) as |input|}}
    {{#if hasBlock}}
      {{yield
        (hash
          label=control.label
          input=input
        )
      }}
    {{else}}
      {{control.label}}
      {{input}}
    {{/if}}
  {{/let}}
{{/bootstrap/control-wrapper}}
