{{#if hasBlock}}
  {{yield (hash
    bar=(component 'progress-bars/-bar'
      classNames='progress-bar-striped progress-bar-animated'
      minimumValue=0
      maximumValue=100
      currentValue=100
      label=label
    )
  )}}
{{else}}
  {{progress-bars/-bar
    classNames='progress-bar-striped progress-bar-animated'
    minimumValue=0
    maximumValue=100
    currentValue=100
    label=label
  }}
{{/if}}
