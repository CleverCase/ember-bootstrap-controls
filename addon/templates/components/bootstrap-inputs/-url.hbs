{{#bootstrap/control-wrapper
  classNames=classNames
  errors=errors
  srOnly=srOnly
  label=label
  help=help
  as |control|
}}
  {{#if hasBlock}}
    {{yield
      (hash
        control=control
        input=(component 'bootstrap/-input'
          value=value
          elementId=control.inputId
          type='url'
          disabled=disabled
          autocomplete=autocomplete
          maxlength=maxlength
          minlength=minlength
          pattern=pattern
          placeholder=placeholder
          readonly=readonly
          required=required
          srOnly=srOnly
          tabindex=tabindex
          helpId=control.helpId
        )
      )
    }}
  {{else}}
    {{control.label for=control.inputId}}
    {{bootstrap/-input
      value=value
      elementId=control.inputId
      type='url'
      disabled=disabled
      autocomplete=autocomplete
      maxlength=maxlength
      minlength=minlength
      pattern=pattern
      placeholder=placeholder
      readonly=readonly
      required=required
      srOnly=srOnly
      tabindex=tabindex
      helpId=control.helpId
    }}
    {{control.help}}
  {{/if}}
{{/bootstrap/control-wrapper}}
