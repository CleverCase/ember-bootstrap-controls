{{#let (component 'bootstrap/-label'
  classNames='form-check-label'
  label=label
  srOnly=srOnly
  for=inputId
) as |label|}}
  {{#let (component 'bootstrap/-checkbox'
    checked=value
    id=inputId
    name=groupId
    type='radio'
    disabled=disabled
    readonly=readonly
    required=required
    srOnly=srOnly
    onClick=onClick
  ) as |input|}}
    {{#if hasBlock}}
      {{yield
        (hash
          label=label
          inputId=inputId
          input=input
        )
      }}
    {{else}}
      {{input}}
      {{label}}
    {{/if}}
  {{/let}}
{{/let}}
