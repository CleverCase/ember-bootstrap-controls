{{#bootstrap/control-wrapper
  classNames=classNames
  errors=errors
  srOnly=srOnly
  label=label
  help=help
  as |control|
}}
  {{#if hasBlock}}
    {{yield
      (hash
        label=(component control.label)
        help=(component control.help)
        control=control
        input=(component "bootstrap/-input"
          value=value
          elementId=control.inputId
          type="date"
          helpId=control.helpId
          autocomplete=autocomplete
          disabled=(readonly _disabled)
          max=max
          min=min
          pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}"
          readonly=readonly
          required=required
          srOnly=srOnly
          step=step
          tabindex=tabindex
          change=onChange
        )
      )
    }}
  {{else}}
    {{control.label}}
    {{bootstrap/-input
      value=value
      elementId=control.inputId
      type="date"
      helpId=control.helpId
      autocomplete=autocomplete
      disabled=(readonly _disabled)
      max=max
      min=min
      pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}"
      readonly=readonly
      required=required
      srOnly=srOnly
      step=step
      tabindex=tabindex
      change=onChange
    }}
    {{#if help}}
      {{control.help}}
    {{/if}}
  {{/if}}
{{/bootstrap/control-wrapper}}
