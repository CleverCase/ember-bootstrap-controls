{{#bootstrap/control-wrapper
  classNames=classNames
  errors=errors
  srOnly=srOnly
  label=label
  help=help
  as |control|
}}
  {{#let (component 'bootstrap/-input'
    value=value
    id=control.inputId
    type='date'
    helpId=control.helpId
    autocomplete=autocomplete
    disabled=(readonly _disabled)
    max=max
    min=min
    pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}"
    readonly=readonly
    required=required
    srOnly=srOnly
    step=step
    tabindex=tabindex
    change=onChange
  ) as |input|}}
    {{#if hasBlock}}
      {{yield
        (hash
          label=control.label
          help=control.help
          control=control
          input=input
        )
      }}
    {{else}}
      {{control.label}}
      {{input}}
      {{#if help}}
        {{control.help}}
      {{/if}}
    {{/if}}
  {{/let}}
{{/bootstrap/control-wrapper}}
