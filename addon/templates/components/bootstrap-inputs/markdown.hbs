{{#bootstrap/control-wrapper
  classNames=classNames
  errors=errors
  srOnly=srOnly
  label=label
  help=help
  as |control|
}}
  {{#let (component "tui-editor"
    value=value
    onChange=(action onChange)
    height=height
    minHeight=minHeight
    previewStyle=previewStyle
    editType=editType
    viewer=viewer
  ) as |input|}}
    {{#if hasBlock}}
      {{yield
        (hash
          label=control.label
          help=control.help
          control=control
          input=input
        )
      }}
    {{else}}
      {{control.label}}
      {{input}}
      {{#if help}}
        {{control.help}}
      {{/if}}
    {{/if}}
  {{/let}}
{{/bootstrap/control-wrapper}}
