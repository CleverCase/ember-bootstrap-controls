{{#bootstrap/control-wrapper
  classNames=classNames
  errors=errors
  srOnly=srOnly
  label=label
  help=help
  as |control|
}}
  {{#let (component 'bootstrap/-input'
    value=value
    id=control.inputId
    type='text'
    disabled=(readonly _disabled)
    autocomplete=autocomplete
    maxlength=maxlength
    minlength=minlength
    pattern=pattern
    placeholder=placeholder
    readonly=readonly
    required=required
    srOnly=srOnly
    tabindex=tabindex
    helpId=control.helpId
    change=onChange
  ) as |input|}}
    {{#if hasBlock}}
      {{yield
        (hash
          label=control.label
          help=control.help
          control=control
          input=input
        )
      }}
    {{else}}
      {{control.label}}
      {{input}}
      {{#if help}}
        {{control.help}}
      {{/if}}
    {{/if}}
  {{/let}}
{{/bootstrap/control-wrapper}}
