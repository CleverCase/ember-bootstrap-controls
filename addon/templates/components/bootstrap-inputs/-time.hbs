{{#bootstrap/control-wrapper
  classNames=classNames
  errors=errors
  srOnly=srOnly
  label=label
  help=help
  as |control|
}}
  {{#if hasBlock}}
    {{yield
      (hash
        label=(component control.label)
        help=(component control.help)
        control=control
        input=(component 'bootstrap/-input'
          value=value
          elementId=control.inputId
          type='time'
          disabled=disabled
          autocomplete=autocomplete
          max=max
          min=min
          placeholder=placeholder
          readonly=readonly
          required=required
          srOnly=srOnly
          step=step
          tabindex=tabindex
          helpId=control.helpId
          change=onChange
        )
      )
    }}
  {{else}}
    {{control.label}}
    {{bootstrap/-input
      value=value
      elementId=control.inputId
      type='time'
      disabled=disabled
      autocomplete=autocomplete
      max=max
      min=min
      placeholder=placeholder
      readonly=readonly
      required=required
      srOnly=srOnly
      step=step
      tabindex=tabindex
      helpId=control.helpId
      change=onChange
    }}
    {{#if help}}
      {{control.help}}
    {{/if}}
  {{/if}}
{{/bootstrap/control-wrapper}}
