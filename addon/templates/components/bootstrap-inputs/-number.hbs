{{#bootstrap/control-wrapper
  classNames=classNames
  errors=errors
  srOnly=srOnly
  label=label
  help=help
  as |control|
}}
  {{#let (component 'bootstrap/-input'
    id=control.inputId
    helpId=control.helpId
    type='number'
    disabled=(readonly _disabled)
    inputmode=inputmode
    max=max
    min=min
    placeholder=placeholder
    readonly=readonly
    required=required
    step=step
    tabindex=tabindex
    value=value
    change=onChange
  ) as |input|}}
    {{#if hasBlock}}
      {{yield
        (hash
          label=control.label
          help=control.help
          control=control
          input=input
        )
      }}
    {{else}}
      {{control.label for=control.inputId}}
      {{input}}
      {{#if help}}
        {{control.help}}
      {{/if}}
    {{/if}}
  {{/let}}
{{/bootstrap/control-wrapper}}
