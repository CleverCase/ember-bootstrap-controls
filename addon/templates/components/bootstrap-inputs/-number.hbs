{{#bootstrap/control-wrapper
  classNames=classNames
  errors=errors
  srOnly=srOnly
  label=label
  help=help
  as |control|
}}
  {{#if hasBlock}}
    {{yield
      (hash
        label=(component control.label)
        help=(component control.help)
        control=control
        input=(component "bootstrap/-input"
          elementId=control.inputId
          helpId=control.helpId
          type="number"
          disabled=(readonly _disabled)
          inputmode=inputmode
          max=max
          min=min
          placeholder=placeholder
          readonly=readonly
          required=required
          step=step
          tabindex=tabindex
          value=value
          change=onChange
        )
      )
    }}

  {{else}}
    {{control.label for=control.inputId}}
    {{bootstrap/-input
      elementId=control.inputId
      helpId=control.helpId
      type="number"
      disabled=(readonly _disabled)
      inputmode=inputmode
      max=max
      min=min
      placeholder=placeholder
      readonly=readonly
      required=required
      step=step
      tabindex=tabindex
      value=value
      change=onChange
    }}
    {{#if help}}
      {{control.help}}
    {{/if}}
  {{/if}}
{{/bootstrap/control-wrapper}}
