{{#bootstrap/control-wrapper
  classNames=classNames
  errors=errors
  srOnly=srOnly
  label=label
  help=help
  as |control|
}}
  {{#if hasBlock}}
    {{yield
      (hash
        label=(component control.label)
        help=(component control.help)
        control=control
        input=(component "bootstrap/-input"
          value=value
          elementId=control.inputId
          type="email"
          disabled=(readonly _disabled)
          autocomplete=autocomplete
          maxlength=maxlength
          minlength=minlength
          multiple=multiple
          pattern=pattern
          placeholder=placeholder
          readonly=readonly
          required=required
          srOnly=srOnly
          tabindex=tabindex
          change=onChange
        )
      )
    }}
  {{else}}
    {{control.label}}
    {{bootstrap/-input
      value=value
      elementId=control.inputId
      type="email"
      disabled=(readonly _disabled)
      autocomplete=autocomplete
      maxlength=maxlength
      minlength=minlength
      multiple=multiple
      pattern=pattern
      placeholder=placeholder
      readonly=readonly
      required=required
      srOnly=srOnly
      tabindex=tabindex
      helpId=control.helpId
      change=onChange
    }}
    {{#if help}}
      {{control.help}}
    {{/if}}
  {{/if}}
{{/bootstrap/control-wrapper}}
