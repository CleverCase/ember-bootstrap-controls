{{#let (hash
  label=(component 'bootstrap/-label'
    classNames='form-check-label'
    label=label
    srOnly=srOnly
    for=inputId
  )
  input=(component 'bootstrap/-checkbox'
    checked=value
    id=inputId
    name=groupId
    type='checkbox'
    disabled=(readonly _disabled)
    required=required
    srOnly=srOnly
    tabindex=tabindex
    onClick=onClick
  )
) as |control|}}
  {{#if hasBlock}}
    {{yield
      (hash
        label=control.label
        inputId=inputId
        input=control.input
      )
    }}
  {{else}}
    {{control.input}}
    {{control.label}}
  {{/if}}
{{/let}}