{{#if hasBlock}}
  {{yield
    (hash
      label=(component 'bootstrap/-label'
        classNames='form-check-label'
        label=label
        srOnly=srOnly
        for=inputId
      )
      inputId=inputId
      input=(component 'bootstrap/-checkbox'
        checked=value
        elementId=inputId
        name=groupId
        type='checkbox'
        disabled=(readonly _disabled)
        required=required
        srOnly=srOnly
        tabindex=tabindex
        onClick=onClick
        change=onChange
      )
    )
  }}
{{else}}
  {{bootstrap/-checkbox
    checked=value
    elementId=inputId
    name=groupId
    type='checkbox'
    disabled=(readonly _disabled)
    required=required
    srOnly=srOnly
    tabindex=tabindex
    onClick=onClick
    change=onChange
  }}
  {{bootstrap/-label
    classNames='form-check-label'
    label=label
    srOnly=srOnly
    for=inputId
  }}
{{/if}}
